{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_create' %}

{% block main %}
    <h1>{{ 'title.post_new'|trans }}</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {attr: {class: 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.summary) }}
            {{ form_widget(form.summary, {attr: {class: 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.content) }}
            {{ form_widget(form.content, {attr: {class: 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.createdAt) }}
            <div class="input-group date" data-toggle="datetimepicker">
                {{ form_widget(form.createdAt, {attr: {class: 'form-control'}}) }}
                <span class="input-group-addon">
                    <span class="fa fa-calendar" area-hidden="true"></span>
                </span>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.tags) }}
            {{ form_widget(form.tags, {attr: {class: 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_post'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_post_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
